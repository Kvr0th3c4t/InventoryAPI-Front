@page "/productos-crear"
@attribute [AuthorizeAttribute]
@inject IProductoService ProductoService
@inject ICategoriaService CategoriaService
@inject IProveedorService ProveedorService
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<PageTitle>Crear Producto</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudPaper Elevation="2" Class="pa-6">
        <MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-4">
            <MudIcon Icon="@Icons.Material.Filled.Add" Size="Size.Large" Color="Color.Primary" />
            <MudText Typo="Typo.h5">Nuevo Producto</MudText>
        </MudStack>

        <MudDivider Class="mb-4" />

        @if (loading)
        {
            <MudStack AlignItems="AlignItems.Center" Class="pa-8">
                <MudProgressCircular Indeterminate="true" Color="Color.Primary" Size="Size.Large" />
                <MudText Typo="Typo.body1" Color="Color.Secondary" Class="mt-2">Cargando datos...</MudText>
            </MudStack>
        }
        else
        {
            <MudForm @ref="_form" Model="@createProductoDto">
                <MudGrid Spacing="3">

                    <MudItem xs="12" sm="12">
                        <MudTextField @bind-Value="createProductoDto.Nombre" Label="Nombre del producto"
                            Variant="Variant.Outlined" Required="true" RequiredError="El nombre es obligatorio"
                            Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Inventory" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField @bind-Value="createProductoDto.Descripcion" Label="Descripción"
                            Variant="Variant.Outlined" Lines="3" Adornment="Adornment.Start"
                            AdornmentIcon="@Icons.Material.Filled.Description" />
                    </MudItem>

                    <MudItem xs="12" sm="6">
                        <MudSelect @bind-Value="categoriaSeleccionada" Label="Categoría" Variant="Variant.Outlined"
                            Required="true" T="int" Adornment="Adornment.Start"
                            AdornmentIcon="@Icons.Material.Filled.Category">
                            @foreach (var cat in categorias?.Items ?? new())
                            {
                                <MudSelectItem T="int" Value="@cat.Id">
                                    @cat.Nombre
                                </MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>

                    <MudItem xs="12" sm="6">
                        <MudSelect @bind-Value="createProductoDto.ProveedorId" Label="Proveedor (opcional)"
                            Variant="Variant.Outlined" T="int?" Clearable="true" Placeholder="Selecciona un proveedor"
                            Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Business">
                            @foreach (var prov in proveedores?.Items ?? new())
                            {
                                <MudSelectItem T="int?" Value="@prov.Id">
                                    @prov.Nombre
                                </MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>

                    <MudItem xs="12" sm="4">
                        <MudNumericField @bind-Value="createProductoDto.StockActual" Label="Stock actual"
                            Variant="Variant.Outlined" Min="0" Adornment="Adornment.End" AdornmentText="uds"
                            AdornmentIcon="@Icons.Material.Filled.Inventory2" />
                    </MudItem>

                    <MudItem xs="12" sm="4">
                        <MudNumericField @bind-Value="createProductoDto.StockMinimo" Label="Stock mínimo"
                            Variant="Variant.Outlined" Min="0" Adornment="Adornment.End" AdornmentText="uds"
                            AdornmentIcon="@Icons.Material.Filled.Warning" />
                    </MudItem>

                    <MudItem xs="12" sm="4">
                        <MudNumericField @bind-Value="createProductoDto.Precio" Label="Precio" Variant="Variant.Outlined"
                            Min="0" Step="0.01M" Format="N2" Adornment="Adornment.Start" AdornmentText="€"
                            AdornmentIcon="@Icons.Material.Filled.Euro" />
                    </MudItem>

                </MudGrid>

                <MudDivider Class="my-4" />

                <MudStack Row="true" Spacing="2" Justify="Justify.FlexEnd">
                    <MudButton Variant="Variant.Outlined" Color="Color.Default" StartIcon="@Icons.Material.Filled.ArrowBack"
                        Href="/productos-lista" Disabled="@saving">
                        Cancelar
                    </MudButton>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@CreateProductoAsync"
                        Disabled="@saving" StartIcon="@(saving ? null : Icons.Material.Filled.Add)">
                        @if (saving)
                        {
                            <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                            <span>Creando...</span>
                        }
                        else
                        {
                            <span>Crear Producto</span>
                        }
                    </MudButton>
                </MudStack>
            </MudForm>
        }
    </MudPaper>
</MudContainer>

@code
{
    private MudForm? _form;
    private CreateProductoDto createProductoDto = new();
    private int categoriaSeleccionada;
    private bool loading = true;
    private bool saving = false;

    private PagedResponse<CategoriaResponseDto> categorias = new()
    {
        Items = new List<CategoriaResponseDto>()
    };

    private PagedResponse<ProveedorResponseDto> proveedores = new()
    {
        Items = new List<ProveedorResponseDto>()
    };

    protected override async Task OnInitializedAsync()
    {
        try
        {
            loading = true;
            categorias = await CategoriaService.GetAllCategoriasAsync(1, 100);
            proveedores = await ProveedorService.GetAllProveedoresAsync(1, 100);
            loading = false;
        }
        catch (Exception ex)
        {
            Snackbar.Add($"❌ Error al cargar datos: {ex.Message}", Severity.Error);
            loading = false;
        }
    }

    private async Task CreateProductoAsync()
    {
        try
        {
            saving = true;
            createProductoDto.CategoriaId = categoriaSeleccionada;

            await ProductoService.AddProductoAsync(createProductoDto);
            Snackbar.Add("✅ Producto creado correctamente", Severity.Success);
            NavigationManager.NavigateTo("/productos-lista");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"❌ Error al crear el producto: {ex.Message}", Severity.Error);
        }
        finally
        {
            saving = false;
        }
    }
}