@page "/productos-editar/{Id:int}"

@inject IProductoService ProductoService
@inject ICategoriaService CategoriaService
@inject IProveedorService ProveedorService
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<PageTitle>Editar Producto</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudPaper Elevation="2" Class="pa-6">
        <MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-4">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Size="Size.Large" Color="Color.Warning" />
            <MudText Typo="Typo.h5">Editar Producto</MudText>
        </MudStack>

        <MudDivider Class="mb-4" />

        <MudForm @ref="_form" Model="@updateProducto">
            <MudGrid Spacing="3">

                <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="updateProducto.Nombre" Label="Nombre del producto"
                        Variant="Variant.Outlined" Required="true" RequiredError="El nombre es obligatorio"
                        Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Inventory" />
                </MudItem>

                <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="updateProducto.SKU" Label="SKU" Variant="Variant.Outlined"
                        Required="true" RequiredError="El SKU es obligatorio" Adornment="Adornment.Start"
                        AdornmentIcon="@Icons.Material.Filled.QrCode" />
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="updateProducto.Descripcion" Label="Descripción"
                        Variant="Variant.Outlined" Lines="3" Adornment="Adornment.Start"
                        AdornmentIcon="@Icons.Material.Filled.Description" />
                </MudItem>

                <MudItem xs="12" sm="6">
                    <MudSelect @bind-Value="categoriaSeleccionada" Label="Categoría" Variant="Variant.Outlined"
                        Required="true" T="int" Adornment="Adornment.Start"
                        AdornmentIcon="@Icons.Material.Filled.Category">
                        @foreach (var cat in categorias?.Items ?? new())
                        {
                            <MudSelectItem T="int" Value="@cat.Id">
                                @cat.Nombre
                            </MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <MudItem xs="12" sm="6">
                    <MudSelect @bind-Value="updateProducto.ProveedorId" Label="Proveedor" Variant="Variant.Outlined"
                        T="int?" Clearable="true" Adornment="Adornment.Start"
                        AdornmentIcon="@Icons.Material.Filled.Business">
                        @foreach (var prov in proveedores?.Items ?? new())
                        {
                            <MudSelectItem T="int?" Value="@prov.Id">
                                @prov.Nombre
                            </MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <MudItem xs="12" sm="6">
                    <MudNumericField @bind-Value="updateProducto.StockActual" Label="Stock actual"
                        Variant="Variant.Outlined" Min="0" Adornment="Adornment.End" AdornmentText="uds"
                        AdornmentIcon="@Icons.Material.Filled.Inventory2" />
                </MudItem>

                <MudItem xs="12" sm="6">
                    <MudNumericField @bind-Value="updateProducto.Precio" Label="Precio" Variant="Variant.Outlined"
                        Min="0" Step="0.01M" Format="N2" Adornment="Adornment.Start" AdornmentText="€"
                        AdornmentIcon="@Icons.Material.Filled.Euro" />
                </MudItem>

            </MudGrid>

            <MudDivider Class="my-4" />

            <MudStack Row="true" Spacing="2" Justify="Justify.FlexEnd">
                <MudButton Variant="Variant.Outlined" Color="Color.Default" StartIcon="@Icons.Material.Filled.ArrowBack"
                    Href="/productos-lista">
                    Cancelar
                </MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@ActualizarProductoAsync"
                    StartIcon="@Icons.Material.Filled.Save">
                    Guardar Cambios
                </MudButton>
            </MudStack>
        </MudForm>
    </MudPaper>
</MudContainer>

@code {
    [Parameter]
    public int Id { get; set; }

    private PagedResponse<CategoriaResponseDto> categorias = new()
    {
        Items = new List<CategoriaResponseDto>()
    };

    private PagedResponse<ProveedorResponseDto> proveedores = new()
    {
        Items = new List<ProveedorResponseDto>()
    };

    private MudForm? _form;
    private ProductoResponseDto productoResponse = new();
    private UpdateProductoDto updateProducto = new();

    private int categoriaSeleccionada;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            productoResponse = await ProductoService.GetProductoByIdAsync(Id);
            categorias = await CategoriaService.GetAllCategoriasAsync(1, 100);
            proveedores = await ProveedorService.GetAllProveedoresAsync(1, 100);

            updateProducto = new UpdateProductoDto
            {
                Nombre = productoResponse.Nombre,
                SKU = productoResponse.SKU,
                CategoriaId = productoResponse.CategoriaId,
                Descripcion = productoResponse.Descripcion,
                StockActual = productoResponse.StockActual,
                ProveedorId = productoResponse.ProveedorId,
                Precio = productoResponse.Precio
            };

            categoriaSeleccionada = productoResponse.CategoriaId;
        }
        catch (Exception ex)
        {
            Snackbar.Add($"❌ Error al cargar el producto: {ex.Message}", Severity.Error);
        }
    }

    private async Task ActualizarProductoAsync()
    {
        try
        {
            updateProducto.CategoriaId = categoriaSeleccionada;

            await ProductoService.UpdateProductoAsync(Id, updateProducto);
            Snackbar.Add("✅ Producto actualizado correctamente", Severity.Success);
            NavigationManager.NavigateTo("/productos-lista");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"❌ Error al actualizar: {ex.Message}", Severity.Error);
        }
    }
}